{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["../*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/providers/*": ["providers/*"],
      "@/styles/*": ["styles/*"],
      "@/validations/*": ["validations/*"],
      "@/types/*": ["types/*"],
      "@/authorization/*": ["authorization/*"],
      "@/containers/*": ["containers/*"],
      "@/wrappers/*": ["wrappers/*"],
      "@/layouts/*": ["layouts/*"],
      "@/hooks/*": ["hooks/*"],
      "@/services/*": ["services/*"],
      "@/actions/*": ["actions/*"],
      "@/url-serializers/*": ["url-serializers/*"],
      "@/generated/*": ["generated/*"],
      "@/schemas/*": ["schemas/*"],
      "@/i18n/*": ["i18n/*"],
      "@/tests/*": ["../tests/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "prisma-json.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "e2e",
    "playwright-report",
    "test-results"
  ]
}
